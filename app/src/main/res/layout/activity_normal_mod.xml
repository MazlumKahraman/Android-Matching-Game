<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFEB3B"
    android:layout_height="match_parent"
    tools:context=".EasyModActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NORMAL MOD"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:layout_height="250dp">

        <ImageButton
            android:id="@+id/img_hard"
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:layout_gravity="top|left"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|right"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center|left"
            android:background="@drawable/card" />


        <ImageButton
            android:id="@+id/img_normal4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center|right"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/card" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:layout_height="185dp">

        <ImageButton
            android:id="@+id/img_normal7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|left"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|right"
            android:background="@drawable/card" />
        <ImageButton
            android:id="@+id/img_normal9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingTop="20dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/card" />

        <ImageButton
            android:id="@+id/img_normal10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/card" />

    </FrameLayout>
    <TextView
        android:id="@+id/tv_moves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingStart="125dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Hamle Sayısı : 0"/>

</LinearLayout>